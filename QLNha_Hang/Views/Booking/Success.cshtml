@{
    ViewBag.Title = "Đặt bàn thành công";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">

            <div class="card shadow p-4 border-0" style="border-radius: 15px;">
                <div class="card-body">

                    <img src="https://cdn-icons-png.flaticon.com/512/845/845646.png"
                         width="100" class="mb-3" />

                    <h2 class="text-success fw-bold">Đặt bàn thành công!</h2>
                    <p class="mt-3" style="font-size: 18px;">
                        Cảm ơn bạn đã đặt bàn tại nhà hàng của chúng tôi.<br />
                        Chúng tôi đã tiếp nhận yêu cầu và sẽ liên hệ lại nếu cần xác nhận thêm.
                    </p>

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary px-4 py-2">
                            ⬅ Về Trang chủ
                        </a>
                        <a href="@Url.Action("LichSu", "Booking")" class="btn btn-outline-success px-4 py-2 ms-2">
                            📅 Xem lịch sử đặt bàn
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<style>
    body {
        background: #f8f9fa;
    }
</style>
